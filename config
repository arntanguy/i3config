# alternatively, you can use the cursor keys:
bindsym $mod+p workspace prev
bindsym $mod+n workspace next
## Move container to prev/next tag
bindsym $mod+Shift+p move container to workspace prev
bindsym $mod+Shift+n move container to workspace next
# Move container to workspace prev/next and go there
bindsym $mod+Ctrl+p move container to workspace prev; workspace prev
bindsym $mod+Ctrl+n move container to workspace next; workspace next
# Move workspace to prev/next output
bindsym $mod+Shift+Up move workspace to output right
bindsym $mod+Shift+Down move workspace to output left

bindsym $mod+g exec ~/.i3/quickswitch.py

